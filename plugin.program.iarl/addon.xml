<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.iarl" name="Internet Archive ROM Launcher" version="0.1" provider-name="Zach Morris">
  <requires>
    <import addon="xbmc.python" version="2.14.0"/>
    <import addon="script.module.xbmcswift2" version="2.4.0"/>
    <import addon="script.module.requests" version="2.6.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>game</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <language></language>
    <summary>Internet Archive ROM Launcher</summary>
    <description>IARL will download ROMs from the Internet Archive and launch them with Kodi</description>
  </extension>
</addon>
